{
  "version": 3,
  "configurePresets": [
    {
      "name": "VS_2022",
      "displayName": "Visual Studio 2022",
      "description": "MSVC Compiler",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/Install/${presetName}"
      }
    },
    {
      "name": "VS_2022_Clang",
      "displayName": "Visual Studio 2022 - Clang",
      "description": "Clang Compiler on Windows",
      "generator": "Ninja",
      "architecture": "x64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/Install/${presetName}",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "Linux",
      "displayName": "Linux - Clang",
      "description": "Clang compiler on Linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/Install/${presetName}",
        "CMAKE_CXX_COMPILER": "clang++"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "VS_2022 Debug",
      "description": "Visual Studio Debug preset",
      "targets": [
        "Vulkan_Renderer"
      ],
      "configurePreset": "VS_2022",
      "configuration": "Debug",
      "verbose": true
    },
    {
      "name": "VS_2022 Release",
      "description": "Visual Studio Release preset",
      "targets": [
        "Vulkan_Renderer"
      ],
      "configurePreset": "VS_2022",
      "configuration": "Release",
      "verbose": true
    },
    {
      "name": "VS_2022_Clang Debug",
      "description": "Visual Studio Clang Debug preset",
      "targets": [
        "Vulkan_Renderer"
      ],
      "configurePreset": "VS_2022_Clang",
      "configuration": "Debug",
      "verbose": true
    },
    {
      "name": "VS_2022_Clang Release",
      "description": "Visual Studio Clang Release preset",
      "targets": [
        "Vulkan_Renderer"
      ],
      "configurePreset": "VS_2022_Clang",
      "configuration": "Release",
      "verbose": true
    },
    {
      "name": "Linux Debug",
      "description": "Linux Debug preset",
      "targets": [
        "Vulkan_Renderer"
      ],
      "configurePreset": "Linux",
      "configuration": "Debug",
      "verbose": true
    },
    {
      "name": "Linux Release",
      "description": "Linux Release preset",
      "targets": [
        "Vulkan_Renderer"
      ],
      "configurePreset": "Linux",
      "configuration": "Release",
      "verbose": true
    }
  ]
}